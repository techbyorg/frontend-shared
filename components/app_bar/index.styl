@require '../../vars'

.z-app-bar
  // shadow-1()
  border-bottom: 1px solid getColor('$bgText12')
  position: relative
  z-index: $zIndexAppBar
  height: 56px
  user-select: none

  &.is-contained
    > .bar > .top
      container()
      padding: 0 16px

  &.is-flat
    // box-shadow: none
    border-bottom: none

  &.is-raised
    shadow-1()
    position: relative
    z-index: 3

  > .bar
    width: 100%
    height: 56px
    box-sizing: border-box
    display: flex
    // flex-direction: column
    background-size: 84px auto
    // padding: 0 16px

    > .top
      width: 100%
      height: 56px
      display: flex
      align-items: center
      padding: 0 16px

      > .top-left-button
        margin-right: 24px

      > .top-right-button
        margin-left: auto

      > .logo
        background-size: contain
        height: 42px
        width: 150px
        background-repeat: no-repeat
        margin-right: 12px
        cursor: pointer
        font-weight: 700
        color: getColor('$primary900')
        display: flex
        align-items: center

        > .logo-by
          color: getColor('$secondaryMain')
          font-weight: 300

      > .title
        font-h5()
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden
        padding-right: 8px

        > .icon
          width: 30.5px
          height: 48px
          background: url($cdnUrl + '/logo_light.svg')
          background-size: 100%
          background-repeat: no-repeat
          margin-right: 24px


  @media (min-width: $breakPointMedium)
    height: 64px

    > .bar
      height: 64px

      > .top
        height: 64px

@require '../../vars'

.z-tap-tabs
  height: 100%
  flex1()
  display: flex
  flex-direction: column

  > .menu
    display: flex
    min-width: 0
    margin-bottom: 24px
    white-space: nowrap
    overflow-x: auto
    -webkit-overflow-scrolling: touch

    > .tap-tab
      font-subtitle1(medium)
      margin-right: 8px
      padding: 12px 16px
      border-radius: 24px
      cursor: pointer

      &:hover
        background: getColor('$bgText6')

      &.is-selected
        font-subtitle1()
        background: getColor('$primary100')
        color: getColor('$primary100Text')

  > .current-tab
    flex1()
    display: flex
    flex-direction: column

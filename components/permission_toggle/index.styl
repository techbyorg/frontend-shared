@require '../../vars'

.z-permission-toggle
  display: inline-flex
  border: 1px solid getColor('$bgText12')
  border-radius: 4px

  > .no, .inherit, .yes
    background: getColor('$bgColor')
    padding: 4px
    cursor: pointer

    &:not(.is-selected)
      &:hover
        background: getColor('$bgColorAlt1')

  > .no
    border-top-left-radius: 4px
    border-bottom-left-radius: 4px
    border-right: 1px solid getColor('$bgText12')

    &.is-selected
      background: getColor('$red500')

  > .inherit
    border-right: 1px solid getColor('$bgText12')

    &.is-selected
      background: getColor('$bgText60')

  > .yes
    border-top-right-radius: 4px
    border-bottom-right-radius: 4px
    &.is-selected
      background: getColor('$green500')

@require '../../vars'

.z-calendar
  // flex1()
  // display: flex
  // width: 300px
  // height: 300px
  margin: 0 auto

  .DayPicker-Day
    &:not(.DayPicker-Day--start):not(.DayPicker-Day--end):not(.DayPicker-Day--outside):not(.DayPicker-Day--disabled)
      &:hover
        background: getColor('$primaryMain8') !important

  // react-day-picker overrides
  .DayPicker-Day--selected
    &:not(.DayPicker-Day--start):not(.DayPicker-Day--end):not(.DayPicker-Day--outside)
      font-subtitle2()
      background: getColor('$primaryMain8')

  .DayPicker-Day
    font-subtitle2()
    border-radius: 0
    width: 48px
    height: 48px
    padding: 0
    outline: none

  .DayPicker-Day--disabled
    color: getColor('$bgText38')

  .DayPicker-Day--start, .DayPicker-Day--end
    &:not(.DayPicker-Day--outside)
      background: getColor('$primaryMain') !important
      color: getColor('$primaryMainText')
      border-radius: 50%
      position: relative

      &:after
        content: ''
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        background: getColor('$primaryMain8')

  .DayPicker-Weekday
    font-caption1()

  .DayPicker-Weekdays
    margin-bottom: 8px

  .DayPicker-NavButton--prev
    position: absolute
    left: 16px

  .DayPicker-Caption > div
    font-subtitle1()
    text-align: center

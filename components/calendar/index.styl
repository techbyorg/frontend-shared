@require '../../vars'

.z-calendar
  // flex1()
  // display: flex
  // width: 300px
  // height: 300px
  margin: 0 auto

  .DayPicker-Day:not(.DayPicker-Day--start):not(.DayPicker-Day--end):not(.DayPicker-Day--outside)
    &:hover
      background: getColor('$upchieve5008') !important

  // react-day-picker overrides
  .DayPicker-Day--selected:not(.DayPicker-Day--start):not(.DayPicker-Day--end):not(.DayPicker-Day--outside)
    font-subtitle2()
    background: getColor('$upchieve5008')

  .DayPicker-Day
    border-radius: 0
    width: 48px
    height: 48px
    padding: 0
    font-subtitle2()

  .DayPicker-Day--start, .DayPicker-Day--end
    background: getColor('$upchieve500') !important
    color: getColor('$primaryMainText')
    border-radius: 50%
    position: relative

    &:after
      content: ''
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: getColor('$upchieve5008')

  .DayPicker-Weekday
    font-caption1()

  .DayPicker-Weekdays
    margin-bottom: 8px

  .DayPicker-NavButton--prev
    position: absolute
    left: 16px

  .DayPicker-Caption > div
    font-subtitle1()
    text-align: center

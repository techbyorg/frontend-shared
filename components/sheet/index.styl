@require '../../vars'

.z-sheet
  position: fixed
  width: 100%
  height: 100%
  bottom: 0
  left: 0
  pointer-events: none
  display: flex
  flex-direction: column
  z-index: $zIndexSheet

  &.is-mounted
    pointer-events: all

    > .backdrop
      opacity: 1

    > .sheet
      transform: translateY(0)

  > .backdrop
    position: fixed
    width: 100%
    height: 100%
    background: getColor('$bgBackdrop')
    -webkit-tap-highlight-color: getColor('$transparent')
    opacity: 0
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1)

  > .sheet
    shadow-upper-1()
    position: absolute
    background: getColor('$bgColor')
    bottom: 0
    left: 0
    max-height: 80%
    border-top-left-radius: 12px
    border-top-right-radius: 12px
    width: 100%
    padding: 24px 24px 16px 24px
    box-sizing: border-box
    z-index: 1
    transform: translateY(100%)
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1)
    overflow-y: auto
    -webkit-overflow-scrolling: touch

    > .inner
      max-width: 500px
      margin: auto

@require '../../vars'

.z-org-users
  flex1()
  display: flex
  min-width: 0

  > .sidebar
    padding: 24px 8px 24px 16px

  > .content
    container()
    flex1()
    min-width: 0

    > .top
      display: flex
      margin-bottom: 16px

      &.invited-top
        margin-top: 32px

      > .left
        > .title
          font-h4()

        > .description
          font-body2()

      > .right
        margin-left: auto

.z-org-users_icons
  display: flex

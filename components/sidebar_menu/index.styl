@require '../../vars'

.z-sidebar-menu
  flex1()
  width: 224px
  padding: 24px 8px 24px 16px
  box-sizing: border-box
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .subtitle
    font-caption1()
    dont-collapse-when-empty()
    margin-bottom: 4px

  > .title
    font-overline(medium)
    text-transform: uppercase
    display: flex
    align-items: center

    > .icon
      margin-left: auto

  > .menu
    margin-top: 16px

.z-sidebar-menu_menu-item
  menu-item()
  display: flex
  white-space: nowrap

  &:hover
    > .delete
      display: block

  > .text
    flex1()
    min-width: 0
    overflow: hidden

  > .delete
    margin-left: auto
    display: none
    flex-shrink: 0

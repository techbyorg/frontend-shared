@require '../../vars'

.z-sidebar-menu
  flex1()
  width: 224px
  padding: 24px 8px 24px 16px
  box-sizing: border-box
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .subtitle
    font-caption1()
    dont-collapse-when-empty()
    margin-bottom: 4px

  > .title
    font-overline(medium)
    text-transform: uppercase
    display: flex
    align-items: center

    > .icon
      margin-left: auto

  > .menu
    margin-top: 16px

    > .menu-item
      menu-item()
